    <!-- This is body of signup page -->
    <div style="margin-top: 30px"></div>
    <div class="max-width-container">
        <div id="regestration_container">
            <div id="regestration_container_left">
                <div class="regestration_content">
                    <div class="heading_0">
                        A
                        <span id="freetext">Free</span>
                        ride to your dream career
                        <h3>Register and apply to 10000+ opportunities</h3>
                    </div>

                    <div class="features_container">
                        <div class="feature">
                            <img src="https://internshala.com/static/images/common/check_box.svg" />
                            <h4>Internships</h4>
                        </div>
                        <div class="feature">
                            <img src="https://internshala.com/static/images/common/check_box.svg" />
                            <h4>Fresher Jobs</h4>
                        </div>
                        <div class="feature">
                            <img src="https://internshala.com/static/images/common/check_box.svg" />
