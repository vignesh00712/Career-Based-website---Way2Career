                    <div class="helper">
                        <div id="google_or"><p>OR</p></div>
                    </div>

                    <label for="email">Email</label>
                    <input id="email" name="email" placeholder=" John@xyz.com" class="reg_fields" />
                    <label for="password">Password</label>
                    <input id="password" name="password" placeholder=" Set a password" class="reg_fields" type="password" />

                    <label for="firstname">First name</label>
                    <input id="firstname" name="firstname" placeholder=" Your first name" class="reg_fields" />
                    <label for="lastname">Last name</label>
                    <input id="lastname" name="lastname" placeholder=" Your last name" class="reg_fields" />

                    <p>
                        By signing up you agree to
                        <span><a href="#">Terms and Conditions</a></span>
                    </p>
                    <button id="signup_btn" type="submit">Signup</button>

                    <p>
                        Already Registered ?
                        <span><a href="students_log.ejs">Login</a></span>
                    </p>
